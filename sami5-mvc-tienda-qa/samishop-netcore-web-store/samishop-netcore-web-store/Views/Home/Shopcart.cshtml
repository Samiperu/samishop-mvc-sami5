						setProductSubTotalElement(sku, subtotal_product);

						cart.products[i].quantity = datos_variaciones_quantity;

						cart.products[i].observacion = "";
						
						cart.summary.subTotal = (cart.summary.subTotal - subtotal_temp) + subtotal;
